unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, umd5;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Button1: TButton;
    Edit4: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
const
value = '25745-byjimminy-582552';
value2 = '5821354-cadizzaboom-48548';
implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
Concat,Md5hash,trim,split,Concat2,Md5hash2,trim2,split2:string;
begin
if length(edit1.text) < 1
then
begin
ShowMessage('Enter reg number.');
exit;
end
else
if length(edit2.text) < 1
then
begin
ShowMessage('Enter name.');
exit;
end;

///////Unlock code generator//////////
Concat:=Edit1.Text+Edit2.Text+value; //сформировали единую строку из серийного номера, имени и константы
Md5hash:=md5(Concat); //получили от нее md5 хэш
Trim:=AnsiUpperCase(Copy(Md5hash, 1,19)+(Copy(Md5hash, 32,1))); //вычленили их хэша строку длиной 20 символов = 19 с начала + 1 с конца и перевели в верхний регистр
Split:=Copy(Trim,1,4)+'-'+Copy(Trim,5,4)+'-'+Copy(Trim,9,4)+'-'+Copy(Trim,13,4)+'-'+Copy(Trim,17,4); //разделили строку на блоки с дефисами через каждые 4 символа 
edit3.Text:=split; //поле edit3 содержит конечный ключ для сброса триала
///////Trial reset generator//////////

///////Unlock code generator//////////
Concat2:=Edit1.Text+Edit2.Text+value2;
Md5hash2:=md5(Concat2);
Trim2:=AnsiUpperCase(Copy(Md5hash2, 1,19)+(Copy(Md5hash2, 32,1)));
Split2:=Copy(Trim2,1,4)+'-'+Copy(Trim2,5,4)+'-'+Copy(Trim2,9,4)+'-'+Copy(Trim2,13,4)+'-'+Copy(Trim2,17,4);
edit4.Text:=split2;
///////Unlock code generator//////////
end;

end.
